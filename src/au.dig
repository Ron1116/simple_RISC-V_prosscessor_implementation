          <string>// addi, xori, slli，等立即数操作，由控制器来控制输入AU的是寄存器数据还是立即数，
// AU只负责计算in1和in2

// AU_arithmetic_opcode = inst[30|14:12]

// 算术运算
`define AU_ADD 4&apos;b0000
`define AU_SUB 4&apos;b1000
`define AU_SLL 4&apos;b0001
`define AU_SLT 4&apos;b0010
`define AU_SLTU 4&apos;b0011
`define AU_XOR 4&apos;b0100
`define AU_SRL 4&apos;b0101
`define AU_SRA 4&apos;b1101
`define AU_OR 4&apos;b0110
`define AU_AND 4&apos;b0111
/*
// 逻辑运算现放入lu模块进行
// 逻辑运算
// 由于beq与sub编码冲突，beq设为1010
// 由于bge与sra编码冲突，bge设为1011
`define ALU_BEQ 4&apos;b1010
`define ALU_BNE 4&apos;b1001
`define ALU_BLT 4&apos;b1100
`define ALU_BGE 4&apos;b1011
`define ALU_BLTU 4&apos;b1110
`define ALU_BGEU 4&apos;b1111
*/

module au(op, in1, in2, out);
	input [3:0] op;
	input [31:0] in1, in2;
	output [31:0] out;

	reg [31:0] out;
	
	// 当op或in1或in2 发生变化时，执行下面代码
	always @(op or in1 or in2)
	begin
		case(op)
			// 算术运算
			`AU_ADD: out = in1 + in2;
			`AU_SUB: out = in1 - in2;
			// 逻辑左移
			// 移位操作数是无符号数，且只取低5位作为有效数
			`AU_SLL: out = in1 &lt;&lt; in2[4:0];
			`AU_SLT: 
				if($signed(in1) &lt; $signed(in2)) 
					out = 1; 
				else
					out = 0;
			`AU_SLTU:
				if($unsigned(in1) &lt; $unsigned(in2)) 
					out = 1; 
				else
					out = 0;
			`AU_XOR: out = in1 ^ in2;
			// 逻辑右移
			`AU_SRL: out = in1 &gt;&gt; in2[4:0];
			// 算术右移
			// 这里取低5位作为有效数，
			// 也有效的避免了srai操作中imm中第十位为1造成的影响
			`AU_SRA: out = $signed(in1) &gt;&gt;&gt; in2[4:0];
			`AU_OR: out = in1 | in2;
			`AU_AND: out = in1 &amp; in2;
			default: out = 0;
		endcase
	end
endmodule</string>
